  {@+if (type(b)==vlist_node) b=hpack(b, natural);
  p=list_ptr(b);
  if ((is_char_node(p))&&(link(p)==null))
    {@+f=font(p);v=char_width(f, char_info(f, character(p)));
    if (v!=width(b)) link(p)=new_kern(width(b)-v);
