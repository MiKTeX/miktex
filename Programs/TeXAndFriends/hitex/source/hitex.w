static char *normalize_quotes (const char *nom, const char *mesg)
{@+ int quoted = false;
    int must_quote = (strchr(nom, ' ') != NULL);
    char *ret = xmalloc(strlen(nom)+3);/*room for two quotes and NUL*/
    char *p=ret;
