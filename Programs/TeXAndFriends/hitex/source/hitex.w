wrap_lig(rt_hit);
if (w!=0)
  {@+link(t)=new_kern(w);t=link(t);w=0;
  }
if (lig_stack > null)
  {@+cur_q=t;cur_l=character(lig_stack);ligature_present=true;
  pop_lig_stack;goto resume;
  }

