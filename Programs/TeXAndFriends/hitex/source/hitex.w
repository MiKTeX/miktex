{@+if (font(lig_char(s))!=hf) goto done3;
j=hn;q=lig_ptr(s);@+if (q > null) hyf_bchar=character(q);
while (q > null)
  {@+c=qo(character(q));
  set_lc_code(c);
  if (hc[0]==0) goto done3;
  if (j==63) goto done3;
  incr(j);hu[j]=c;hc[j]=hc[0];@/
  q=link(q);
  }
hb=s;hn=j;
if (odd(subtype(s))) hyf_bchar=font_bchar[hf];@+else hyf_bchar=non_char;
}

