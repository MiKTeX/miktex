static int fract(int @!x, int @!n, int @!d, int @!max_answer)
{@+
bool negative; /*should the answer be negated?*/
int @!a; /*the answer*/
int @!f; /*a proper fraction*/
int @!h; /*smallest integer such that |2*h >= d|*/
int @!r; /*intermediate remainder*/
