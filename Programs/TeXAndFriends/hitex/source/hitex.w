  }
t=n/d;
if (t > max_answer/x) goto too_big;
a=t*x;n=n-t*d;
if (n==0) goto found;
t=x/d;
if (t > (max_answer-a)/n) goto too_big;
a=a+t*n;x=x-t*d;
if (x==0) goto found;
if (x < n)
  {@+t=x;x=n;n=t;
  }  /*now |0 < n <= x < d|*/
