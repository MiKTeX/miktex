int hget_baseline_no(pointer bs, pointer ls, scaled lsl)
{
  static int rover=0;
  int i;
  for(i=0; i< bl_used; i++) /* search for an existing spec */
    { bl_definition *q=&(bl_defined[rover]);
    if (glue_equal(bs,q->bs) &&  glue_equal(ls,q->ls) && lsl==q->lsl)
      return rover;
    else if (rover==0)
      rover=bl_used-1;
    else
      rover--;
